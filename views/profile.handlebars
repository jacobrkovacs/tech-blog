{{#if logged_in}}
<h2 class="ml-4">Welcome {{username}} </h2>
<h3 class="ml-4">Your Posts</h3>
    <div class="">
        {{#each blogposts}}    
        <div class=" card my-3 mx-4 col-md-5 ">
            <h4 class="card-header">{{this.title}}</h4>
            <div class="card-body">
                <p>{{this.content}}</p>
                <h5>Comments</h5>
                <hr>
                {{#each this.comments}}
                <p>{{this.content}}</p>
                <p class="text-muted">Written by {{this.user.username}}</p>
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>

    <h3 class=" ml-4 w-50">Create a New Post</h3>
    <form class="ml-4 post-form w-50  mb-4">
        <div class="form-group">
            <label for="postTitle">Post Title</label>
            <input type="text" class="form-control" id="post-title" placeholder="Enter Post Title">
        </div>
        <div class="form-group">
            <label for="postContent">Content</label>
            <input type="text" class="form-control" id="post-content" placeholder="Enter Post Content">
        </div>
        <button class="btn" type="submit">Create Post</button>
    </form>



{{/if}}
    <script src="/js/addPost.js"></script>