<div class=" card my-3 mx-3 col-md-5 ">
    <h4 class="card-header">{{singlePost.dataValues.title}}</h4>
    <div class="card-body">
        <small>Written by: {{singlePost.user.dataValues.fname}} {{singlePost.user.dataValues.lname}}</small>
        <hr>
        <p>{{singlePost.dataValues.content}}</p>
        <h5>Comments:</h5>
        <hr>
            {{#each singlePost.dataValues.comments}}
            <p>{{this.dataValues.content}}</p>
            <p class="text-muted">Written by {{this.dataValues.user.dataValues.username}}</p>
            {{/each}}
    </div>
</div>